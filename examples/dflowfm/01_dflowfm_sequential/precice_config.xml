<?xml version="1.0" encoding="UTF-8" ?>
<precice-configuration>
  <log>
    <sink type="stream" output="stdout" filter= "(%Severity% > debug) or (%Severity% >= debug and %Module% contains ParticipantImpl) or (%Severity% >= debug and %Module% contains partition) or (%Severity% >= debug and %Module% contains PointToPointCommunication)" enabled="true" />
  </log>
  <data:scalar name="greeting" />

  <mesh name="fm-mesh" dimensions="2">
    <use-data name="greeting" />
  </mesh>

  <participant name="fm">
    <provide-mesh name="fm-mesh" />
    <read-data name="greeting" mesh="fm-mesh" />
  </participant>

  <participant name="dummy">
    <receive-mesh name="fm-mesh" from="fm" api-access="true" />
    <write-data name="greeting" mesh="fm-mesh" />
  </participant>

  <m2n:sockets acceptor="dummy" connector="fm" exchange-directory=".." />

  <coupling-scheme:serial-explicit>
    <time-window-size value="1.0" />
    <max-time value="2.0" />
    <participants first="dummy" second="fm" />
    <exchange data="greeting" mesh="fm-mesh" from="dummy" to="fm" />
  </coupling-scheme:serial-explicit>
</precice-configuration>
