{
  "version": 8,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "displayName": "Default config",
      "description": "Default config",
      "generator": "Default generator",
      "binaryDir": "build_${presetName}",
      "cacheVariables": {
        "CONFIGURATION_TYPE": "default config",
        "CMAKE_INSTALL_PREFIX": "install_${presetName}",
        "ENABLE_CODE_COVERAGE": "OFF"
      }
    },
    {
      "name": "windows-base",
      "hidden": true,
      "inherits": "default",
      "displayName": "Windows-only configuration",
      "description": "This build is only available on Windows",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "generator": "Visual Studio 17 2022",
      "cacheVariables": {
        "architecture": {
          "value": "x64"
        }
      },
      "environment": {
        "oneAPI_root": "C:\\Program Files (x86)\\Intel\\oneAPI"
      }
    },
    {
      "name": "windows-visual-studio",
      "hidden": true,
      "inherits": "windows-base",
      "displayName": "Windows Visual Studio configuration",
      "generator": "Visual Studio 17 2022"
    },
    {
      "name": "windows-ninja",
      "hidden": true,
      "inherits": "windows-base",
      "displayName": "Windows Ninja configuration",
      "generator": "Ninja"
    },
    {
      "name": "linux",
      "hidden": true,
      "inherits": "default",
      "displayName": "Linux-only configuration",
      "description": "This build is only available on Linux",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "generator": "Ninja"
    },
    {
      "name": "all",
      "inherits": "windows-visual-studio",
      "displayName": "D-Flow FM, D-WAQ, D-Waves, DIMR IFORT win64",
      "description": "Configure D-Flow FM, D-WAQ, D-Waves, DIMR using Visual Studio 17 2022 generator",
      "cacheVariables": {
        "CONFIGURATION_TYPE": "all"
      }
    },
    {
      "name": "delft3d4",
      "inherits": "windows-visual-studio",
      "displayName": "Delft3D-FLOW, D-WAQ, D-Waves IFORT win64",
      "description": "Configure Delft3D-FLOW, D-WAQ, D-Waves using Visual Studio 17 2022 generator",
      "cacheVariables": {
        "CONFIGURATION_TYPE": "delft3d4"
      }
    },
    {
      "name": "delft3dfm",
      "inherits": "windows-visual-studio",
      "displayName": "D-Flow FM, D-WAQ, D-Waves, DIMR IFORT win64",
      "description": "Configure D-Flow FM, D-WAQ, D-Waves, DIMR using Visual Studio 17 2022 generator",
      "cacheVariables": {
        "CONFIGURATION_TYPE": "delft3dfm"
      }
    },
    {
      "name": "dflowfm",
      "inherits": "windows-visual-studio",
      "displayName": "D-Flow FM IFORT win64",
      "description": "Configure D-Flow FM using Visual Studio 17 2022 generator",
      "cacheVariables": {
        "CONFIGURATION_TYPE": "dflowfm"
      }
    },
    {
      "name": "dflowfm_interacter",
      "inherits": "windows-visual-studio",
      "displayName": "D-Flow FM with Interacter IFORT win64",
      "description": "Configure D-Flow FM with Interacter using Visual Studio 17 2022 generator",
      "cacheVariables": {
        "CONFIGURATION_TYPE": "dflowfm_interactor"
      }
    },
    {
      "name": "dimr",
      "inherits": "windows-visual-studio",
      "displayName": "DIMR IFORT win64",
      "description": "Configure DIMR using Visual Studio 17 2022 generator",
      "cacheVariables": {
        "CONFIGURATION_TYPE": "dimr"
      }
    },
    {
      "name": "dwaq-visual-studio",
      "inherits": "windows-visual-studio",
      "displayName": "D-WAQ/D-PART IFORT win64",
      "description": "Configure D-WAQ/D-PART using Visual Studio 17 2022 generator",
      "cacheVariables": {
        "CONFIGURATION_TYPE": "dwaq"
      }
    },
    {
      "name": "dwaq-ninja",
      "inherits": "windows-ninja",
      "displayName": "D-WAQ/D-PART IFORT win64 Ninja",
      "description": "Configure D-WAQ/D-PART using Ninja generator",
      "cacheVariables": {
        "CONFIGURATION_TYPE": "dwaq"
      }
    },
    {
      "name": "dwaves",
      "inherits": "windows-visual-studio",
      "displayName": "D-Waves IFORT win64",
      "description": "Configure D-Waves using Visual Studio 17 2022 generator",
      "cacheVariables": {
        "CONFIGURATION_TYPE": "dwaves"
      }
    },
    {
      "name": "flow2d3d",
      "inherits": "windows-visual-studio",
      "displayName": "Delft3D-FLOW IFORT win64",
      "description": "Configure Delft3D-FLOW using Visual Studio 17 2022 generator",
      "cacheVariables": {
        "CONFIGURATION_TYPE": "flow2d3d"
      }
    },
    {
      "name": "swan",
      "inherits": "windows-visual-studio",
      "displayName": "SWAN IFORT win64",
      "description": "Configure SWAN using Visual Studio 17 2022 generator",
      "cacheVariables": {
        "CONFIGURATION_TYPE": "swan"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-base",
      "hidden": true,
      "environment": {
        "oneAPI_root": "C:\\Program Files (x86)\\Intel\\oneAPI"
      },
      "targets": "install"
    },
    {
      "name": "build-dwaq-visual-studio",
      "displayName": "Build D-Waq/D-Part with Visual Studio",
      "inherits": "build-base",
      "configurePreset": "dwaq-visual-studio"
    },
    {
      "name": "build-dwaq-ninja",
      "displayName": "Build D-Waq/D-Part with Ninja",
      "inherits": "build-base",
      "configurePreset": "dwaq-ninja"
    },
    {
      "name": "build-dimr",
      "displayName": "Build DIMR",
      "inherits": "build-base",
      "configurePreset": "dimr"
    },
    {
      "name": "build-all",
      "displayName": "Build All",
      "inherits": "build-base",
      "configurePreset": "all"
    }
  ],
  "testPresets": [
    {
      "name": "test-base",
      "hidden": true,
      "environment": {
        "oneAPI_root": "C:\\Program Files (x86)\\Intel\\oneAPI"
      },
      "description": "For now I did not extend this. D-Waq ctests are in a separate folder, --unit-test dir with presets is not yet supported in cmake 3.29, will be in 3.30 (MDK 21-05-2024)"
    }
  ]
